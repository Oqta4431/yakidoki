<% content_for :title, "ヤキドキ｜サンマ" %>

<div class="grid gap-4 place-items-center">
  <h2 class="text-2xl font-bold text-amber-900">🐟 サンマモード</h2>

  <p id="ideal-time" class="text-lg text-slate-700"></p>

  <!-- デバッグ用：リアルタイム経過秒数 -->
  <p id="timer" class="text-2xl font-mono text-amber-900">0.00 秒</p>

  <!-- サンマ画像 -->
  <%= image_tag "sanma_raw.png", id: "food-image", class: "w-64 h-auto",
      data: {
        raw:    asset_path("sanma_raw.png"),
        half:   asset_path("sanma_half.png"),
        good:   asset_path("sanma_good.png"),
        almost: asset_path("sanma_almost.png"),
        burnt:  asset_path("sanma_burnt.png")
      } %>


  <button id="start-btn"
          class="w-72 h-20 rounded-2xl text-xl font-semibold
                 bg-amber-600 hover:bg-amber-700 active:scale-95
                 text-white shadow transition select-none">
    🔥 長押しして焼こう！
  </button>

  <p id="result" class="text-lg text-amber-900"></p>

  <%= link_to "🏠 ホームへ戻る", root_path, class: "text-amber-800 underline" %>
</div>
