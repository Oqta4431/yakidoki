<% content_for :title, "ヤキドキ｜焼き芋" %>

<div class="grid gap-4 place-items-center">
  <h2 class="text-2xl font-bold text-amber-900">🍠 焼き芋モード</h2>

  <p id="ideal-time" class="text-lg text-slate-700"></p>

  <!-- デバッグ用：リアルタイム経過秒数 -->
  <p id="timer" class="text-2xl font-mono text-amber-900">0.00 秒</p>

  <!-- 画像 -->
  <%= image_tag "yakiimo_raw.png", id: "food-image", class: "w-64 h-auto",
      data: {
        raw:      asset_path("yakiimo_raw.png"),
        half:     asset_path("yakiimo_half.png"),
        good:     asset_path("yakiimo_good.png"),
        almost:   asset_path("yakiimo_almost.png"),
        burnt:    asset_path("yakiimo_burnt.png"),
        burning:  asset_path("yakiimo_burning")
      } %>

  <button id="start-btn"
          class="w-72 h-20 rounded-2xl text-xl font-semibold
                 bg-amber-600 hover:bg-amber-700 active:scale-95
                 text-white shadow transition select-none">
    🔥 長押しして焼こう！
  </button>

  <p id="result" class="text-lg text-amber-900 hidden"></p>

  <div class="flex gap-4">
  <%= link_to "🏠 ホームへ戻る", root_path, class: "text-amber-800 underline" %>

  <%= link_to "https://twitter.com/intent/tweet?text=ヤキドキで焼き芋🍠を焼いたよ！%20%23ヤキドキ%0A&url=#{root_url}",
              target: "_blank",
              rel: "noopener",
              class: "inline-flex items-center justify-center w-9 h-9 rounded-full border border-slate-300 hover:bg-slate-100" do %>
    <svg viewBox="0 0 24 24" class="w-5 h-5" aria-hidden="true">
      <path d="M18.9 3H22l-7.9 9.1L22.7 21H16L10.7 14.7 4.6 21H1.5l8.6-9.9L1.2 3H8l4.8 6.2L18.9 3z" fill="currentColor"/>
    </svg>
  <% end %>
  </div>

</div>
